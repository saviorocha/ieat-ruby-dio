<p>Restaurantes</p>
<table>
    <thead>
        <tr>
            <th>Nome</th>            
        </tr>
    </thead>

    <tbody>
        <% Restaurant.all do |r| %>
            <tr>
                <th><%= r.name %></th>
                <table>
                    <thead>
                        <tr>
                            <th>Produto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% r.products.each do |p| %>
                            <tr>
                                <%= form_tag('/orders') do %>
                                    <%= hidden_field_tag :product_id, p.id%>
                                    <td><%= p.name %></td>
                                    <td><%= p.value %></td>
                                    <td><%= submit_tag 'Pedir'%></td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>                
            </tr>
        <% end %>
    </tbody>

</table>